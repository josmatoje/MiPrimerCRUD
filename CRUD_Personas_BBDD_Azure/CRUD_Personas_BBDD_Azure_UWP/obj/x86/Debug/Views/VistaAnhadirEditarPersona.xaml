<Page
    x:Class="CRUD_Personas_BBDD_Azure_UWP.Views.VistaAnhadirEditarPersona"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:CRUD_Personas_BBDD_Azure_UWP.ViewModels"
    xmlns:dateConverter="using:CRUD_Personas_BBDD_Azure_UWP.ViewModels.Utilidades"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:VistaAnhadirEditarPersonaVM/>
    </Page.DataContext>
    <Page.Resources>
        <dateConverter:clsDateConverter x:Key="dateConver"/>
    </Page.Resources>
    <Border MaxWidth="800" MinWidth="550" MaxHeight="600" CornerRadius="20" BorderThickness="3" BorderBrush="DimGray" >
        <ScrollViewer  VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <RelativePanel>
                <AppBarButton x:ConnectionId='2' x:Name="back" Icon="Back"                   />
                <RelativePanel RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
                    <TextBlock x:ConnectionId='3' x:Name="nombre" Text="Nombre: *" Margin="0,10" FontSize="20"/>
                    <TextBox x:ConnectionId='4' x:Name="nombrePersona" Text="{Binding OPersona.Nombre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"                                          MinWidth="300" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona"/>
                    <TextBlock x:ConnectionId='5' x:Name="apellidos" Text="Apellidos: *" Margin="0,10" FontSize="20" RelativePanel.Below="nombre"/>
                    <TextBox x:ConnectionId='6' x:Name="apellidosPersona" Text="{Binding OPersona.Apellidos, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"                                          MinWidth="300" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="nombre"/>
                    <TextBlock x:ConnectionId='7' x:Name="fechaNacimiento" Text="Fecha de nacimiento: " Margin="0,10,20,10" FontSize="20" RelativePanel.Below="apellidos"/>
                    <DatePicker x:ConnectionId='8' x:Name="fechaNacimientoPersona" SelectedDate="{Binding OPersona.FechaNacimiento, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource dateConver}}" MinWidth="300" Margin="5,10" FontSize="20" RelativePanel.RightOf="fechaNacimiento" RelativePanel.Below="apellidos"/>
                    <TextBlock x:ConnectionId='9' x:Name="direccion" Text="Dirección: " Margin="0,10" FontSize="20" RelativePanel.Below="fechaNacimiento"/>
                    <TextBox x:ConnectionId='10' x:Name="direccionPersona" Text="{Binding OPersona.Direccion, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="300" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="fechaNacimiento"/>
                    <TextBlock x:ConnectionId='11' x:Name="telefono" Text="telefono: " Margin="0,10" FontSize="20" RelativePanel.Below="direccion"/>
                    <TextBox x:ConnectionId='12' x:Name="telefonoPersona" Text="{Binding OPersona.Telefono, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MinWidth="300" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="direccion"/>
                    <TextBlock x:ConnectionId='13' x:Name="departamento" Text="Departamento: " Margin="0,10" FontSize="20" RelativePanel.Below="telefono"/>
                    <ComboBox x:ConnectionId='14' x:Name="departamentoPersona" ItemsSource="{Binding ListaDepartamentos}" SelectedValue="{Binding OPersona.IdDepartamento, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedValuePath="ID"  MinWidth="300" Margin="5,10,0,5" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="telefono">
                        <!--ItemTemplate="{Binding Nombre}"-->
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="nombreDepartamento" Text="{Binding Nombre}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock x:ConnectionId='15' x:Name="foto" Text="Foto: " Margin="0,10" FontSize="20" RelativePanel.Below="departamento"/>
                    <Image x:ConnectionId='16' x:Name="fotoPersona" Source="{Binding Path=Foto.Bitmap}" MinHeight="200" MaxHeight="200" MinWidth="150" MaxWidth="150" Margin="5" RelativePanel.AlignHorizontalCenterWith="fechaNacimientoPersona" RelativePanel.Below="departamento"/>
                    <Button x:ConnectionId='17' x:Name="seleccionaFoto" Content="Seleccionar imagen" Command="{Binding Path=SeleccionarFoto}" Margin="5" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="fotoPersona"/>
                    <!--Click="back_Click" La actualizacion en la BBDD tardá más q la instruccion de volver atras y la lista no aparece actualizada-->
                    <Button x:ConnectionId='18' x:Name="guardar" Content="Guardar" Command="{Binding GuardarFoto }" Margin="10" RelativePanel.Below="seleccionaFoto" RelativePanel.AlignRightWithPanel="True"/>
                    <TextBlock x:ConnectionId='19' x:Name="advertencia" Text="* Campos obligatorios" FontWeight="Bold"  RelativePanel.AlignVerticalCenterWith="guardar"/>
                </RelativePanel>
            </RelativePanel>
        </ScrollViewer>
    </Border>
</Page>

