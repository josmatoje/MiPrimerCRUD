<Page
    x:Class="CRUD_Personas_BBDD_Azure_UWP.Views.VistaPersona"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:CRUD_Personas_BBDD_Azure_UWP.ViewModels"
    xmlns:shortDate="using:CRUD_Personas_BBDD_Azure_UWP.ViewModels.Utilidades"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:VistaPersonasVM/>
    </Page.DataContext>
    <Page.Resources>
        <shortDate:clsShortDateConverter x:Key="short"/>
    </Page.Resources>
    <RelativePanel>
        <TextBox x:ConnectionId='2' x:Name="buscador" MinWidth="300" Text="{Binding TextBoxBuscar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" RelativePanel.AlignTopWithPanel="True" PlaceholderText="Buscar" Width="200" Margin="20"/>
        <AppBarButton x:ConnectionId='3' x:Name="find" Icon="Find" Command="{Binding Buscador}" RelativePanel.RightOf="buscador" RelativePanel.AlignTopWith="buscador" Margin="0,20,0,0"/>
        <AppBarButton x:ConnectionId='4' x:Name="Anhadir" Icon="Add" Label="Añadir"                       RelativePanel.Below="buscador" RelativePanel.AlignLeftWithPanel="True" MaxWidth="140" Margin="20,0"/>
        <AppBarButton x:ConnectionId='5' x:Name="Eliminar" Icon="Delete" Label="eliminar" Command="{Binding Eliminador}" RelativePanel.RightOf="Anhadir" RelativePanel.AlignTopWith="Anhadir" MaxWidth="140" Margin="20,0"/>
        <AppBarButton x:ConnectionId='6' x:Name="Editar" Icon="Edit" Label="editar" Command="{Binding Editor}"                      RelativePanel.RightOf="Eliminar" RelativePanel.AlignTopWith="Anhadir" MaxWidth="140"/>
        <ListView x:ConnectionId='7' x:Name="lista" ItemsSource="{Binding ListaPersonaOfrecido}" SelectedItem="{Binding PersonaSeleccionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" IsItemClickEnabled="True" 
                  BorderBrush="Black" MinWidth="140" Margin="20" RelativePanel.Below="Anhadir" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWith="buscador">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <RelativePanel MinWidth="200" Height="50" >                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
                        <TextBlock x:Name="nombre" Text="{Binding Nombre}" />
                        <TextBlock x:Name="apellido" Text="{Binding Apellidos}" Margin="5,0" RelativePanel.RightOf="nombre"/>
                    </RelativePanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ScrollViewer RelativePanel.RightOf="lista" RelativePanel.AlignTopWith="lista" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Margin="30" Padding="20"
                       VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <RelativePanel x:ConnectionId='8' x:Name="datos">
                <Image x:ConnectionId='9' x:Name="imagen" Source="{Binding Path=OImagen.Bitmap, UpdateSourceTrigger=PropertyChanged}" MaxHeight="400" MinHeight="100" MaxWidth="300" MinWidth="200" Margin="100,0" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                <TextBlock x:ConnectionId='10' x:Name="nombre" RelativePanel.Below="imagen" Text="Nombre:" Margin="0,10" FontSize="20"/>
                <TextBlock x:ConnectionId='11' x:Name="nombrePersona" Text="{Binding PersonaSeleccionada.Nombre, UpdateSourceTrigger=PropertyChanged}" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="imagen"/>
                <TextBlock x:ConnectionId='12' x:Name="apellidos" Text="Apellidos:" Margin="0,10" FontSize="20" RelativePanel.AlignLeftWith="nombre" RelativePanel.Below="nombre"/>
                <TextBlock x:ConnectionId='13' x:Name="apellidosPersona" Text="{Binding PersonaSeleccionada.Apellidos, UpdateSourceTrigger=PropertyChanged}" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="nombre"/>
                <TextBlock x:ConnectionId='14' x:Name="fechaNacimiento" Text="Fecha de nacimiento:" Margin="0,10,20,10" FontSize="20" RelativePanel.Below="apellidos"/>
                <TextBlock x:ConnectionId='15' x:Name="fechaNacimientoPersona" Text="{Binding PersonaSeleccionada.FechaNacimiento, Converter={StaticResource short}, UpdateSourceTrigger=PropertyChanged}" Margin="5,10" FontSize="20" RelativePanel.RightOf="fechaNacimiento" RelativePanel.Below="apellidos"/>
                <TextBlock x:ConnectionId='16' x:Name="direccion" Text="Dirección:" Margin="0,10" FontSize="20" RelativePanel.AlignLeftWith="nombre" RelativePanel.Below="fechaNacimiento"/>
                <TextBlock x:ConnectionId='17' x:Name="direccionPersona" Text="{Binding PersonaSeleccionada.Direccion, UpdateSourceTrigger=PropertyChanged}" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="fechaNacimiento"/>
                <TextBlock x:ConnectionId='18' x:Name="telefono" Text="telefono:" Margin="0,10" FontSize="20" RelativePanel.AlignLeftWith="nombre" RelativePanel.Below="direccion"/>
                <TextBlock x:ConnectionId='19' x:Name="telefonoPersona" Text="{Binding PersonaSeleccionada.Telefono, UpdateSourceTrigger=PropertyChanged}" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="direccion"/>
                <TextBlock x:ConnectionId='20' x:Name="departamento" Text="Departamento:" Margin="0,10" FontSize="20" RelativePanel.AlignLeftWith="nombre" RelativePanel.Below="telefono"/>
                <TextBlock x:ConnectionId='21' x:Name="departamentoPersona" Text="{Binding PersonaSeleccionada.NombreDepartamento, UpdateSourceTrigger=PropertyChanged}" Margin="5,10" FontSize="20" RelativePanel.AlignLeftWith="fechaNacimientoPersona" RelativePanel.Below="telefono"/>
            </RelativePanel>
        </ScrollViewer>
    </RelativePanel>
</Page>

